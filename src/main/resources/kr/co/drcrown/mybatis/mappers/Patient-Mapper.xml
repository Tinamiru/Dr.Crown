<mapper namespace="Patient-Mapper">
	 <sql id="search">
		<if test="searchType == 'n'.toString()">
			AND p.P_NAME LIKE '%'||#{keyword}||'%' OR p.p_no LIKE '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'y'.toString()">
			AND fn_choSearch(p.P_NAME) LIKE '%'||#{keyword}||'%' OR p.P_NO LIKE '%'||#{keyword}||'%'
		</if>
	</sql>
	
