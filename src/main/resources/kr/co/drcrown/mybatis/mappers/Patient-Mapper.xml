	<select id="selectPatientByPatientNo" parameterType="str" resultType="patient">
		select 
		* 
		from patient
		where p_no=#{pNo}
	</select>

	<select id="selectPatientBySerchKeyword" parameterType="str" resultType="patient">
		select *
		from patient p
		WHERE 1=1
		<include refid="search" />
		order by p_name
	</select>


	<update id="insertPatient" parameterType="patient">
		insert into 
		patient(P_NO,P_NAME,P_SFX,P_BIR,P_RNUM,P_TEL,P_ZIPCODE,P_ADDR1,P_ADDR2,P_FDATE,P_LASTDATE,P_INSURANCE)
		values(GET_PCODE('now'),#{pName},#{pSfx},#{pBir},#{pRnum},#{pTel},#{pZipcode},#{pAddr1},#{pAddr2},#{pFdate},#{pLastdate},#{pInsurance})
	</update>	
