	<update id="updatePatient" parameterType="patient">
		update patient 
		set 
		P_NAME=#{pName},P_SFX=#{pSfx},P_BIR=#{pBir},P_TEL=#{pTel},P_ZIPCODE=#{pZipcode},P_ADDR1=#{pAddr1},P_ADDR2=#{pAddr2},P_MEMO=#{pMemo}		
		where P_NO=#{pNo}
	</update>

	<update id="deletePatient" parameterType="str" >
		delete 
		from patient 
		where p_no=#{pNo}		
	</update>

	
